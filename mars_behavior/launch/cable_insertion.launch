<launch>
    <arg name="dual_arm" default="false"/>
    <arg name="robot_id" default="panda" />
    <group ns="$(arg robot_id)" unless="$(arg dual_arm)">
        <node name="cable_insertion" type="cable_insertion" pkg="mars_behavior" output="screen">
            <param name="robot_ids" value="[panda]" />
        </node>
    </group>
    <group ns="$(arg robot_id)" if="$(arg dual_arm)">
        <node name="cable_insertion" type="cable_insertion_dual" pkg="mars_behavior" output="screen">
            <param name="robot_ids" value="[pan_pan,an_an]" />
        </node>
    </group>
</launch>