<launch>
  <arg name="bag_name" default="upright"/>
  <node pkg="rosbag" type="play" name="rosbag" required="true" args="$(find mars_perception)/bags/$(arg bag_name)"/>

  <node name="extract" pkg="image_view" type="extract_images" respawn="false" required="true" output="screen" cwd="~/data/d405">
    <remap from="image" to="/d405/camera/color/image_raw"/>
  </node>

  <node name="extract" pkg="image_view" type="extract_images" respawn="false" required="true" output="screen" cwd="~/data/d455_0">
    <remap from="image" to="/d455_0/camera/color/image_raw"/>
  </node>

  <node name="extract" pkg="image_view" type="extract_images" respawn="false" required="true" output="screen" cwd="~/data/d455_1">
    <remap from="image" to="/d455_1/camera/color/image_raw"/>
  </node>

</launch>
